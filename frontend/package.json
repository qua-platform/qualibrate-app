{
  "name": "entropy-frontend-ui",
  "version": "1.0.0",
  "description": "Web Interface for Entropy",
  "author": "QM & V4Scale",
  "license": "MIT",
  "private": true,
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "homepage": "/",
  "scripts": {
    "build": "webpack",
    "build:inside-docker": "PUBLIC_PATH='/static/' webpack",
    "start": "webpack serve --open",
    "start:local:dev": "env-cmd -f .env webpack serve --open",
    "start:dev": "API_URL=https://dev.entropy-lab.io/ REACT_APP_MQTT_HOST=wss://dev.entropy-lab.io/updates/ws webpack serve --open",
    "clean": "rimraf ./dist",
    "start:testServer": "node scripts/testServer.js",
    "lint": "run-s lint:code lint:style",
    "lint:code": "eslint --ext ts,tsx src",
    "lint:style": "stylelint --fix -f verbose src/**/*.scss",
    "lint:fix": "npm run lint:code -- --fix && npm run lint:style -- --fix",
    "start:mqtt:test": "cross-env API_URL=http://localhost/ cross-env ENABLE_AUTO_AUTH=TRUE cross-env REACT_APP_MQTT_HOST=ws://localhost/updates/ws npm run start",
    "start:local": "cross-env API_URL=http://localhost/ npm run start",
    "prepare": "cd .. && husky install entropy_frontend_ui/.husky",
    "format": "prettier --write src public package.json"
  },
  "pre-commit": [
    "format"
  ],
  "devDependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.15.14",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "@types/refractor": "3.4.1",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "assert": "^2.1.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-css-modules": "2.12.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "express": "^4.19.2",
    "husky": "^9.0.11",
    "npm-run-all": "4.1.5",
    "pre-commit": "1.2.2",
    "prettier": "^3.2.5",
    "stylelint-prettier": "^5.0.0",
    "typescript": "^5.4.2",
    "typescript-eslint": "^7.3.1",
    "webpack-dev-server": "4.13.1"
  },
  "dependencies": {
    "@gitgraph/react": "^1.6.0",
    "@react-hook/switch": "1.3.3",
    "@textea/json-viewer": "^3.4.0",
    "assets": "3.0.1",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "7.0.3",
    "css-hot-loader": "1.4.4",
    "css-loader": "^6.10.0",
    "dotenv-webpack": "^8.0.1",
    "file-loader": "^6.2.0",
    "flexlayout-react": "0.7.15",
    "html-webpack-plugin": "^5.5.0",
    "ify-loader": "^1.1.0",
    "javascript-time-ago": "2.5.9",
    "jsx-runtime": "^1.2.0",
    "mini-css-extract-plugin": "2.7.5",
    "node-sass": "^9.0.0",
    "precompiled-mqtt": "^4.3.14-beta",
    "prism-color-variables": "1.0.1",
    "prismjs": "1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "6.22.3",
    "react-toastify": "10.0.5",
    "react-tooltip": "5.26.3",
    "refractor": "4.8.1",
    "sass": "1.59.3",
    "sass-loader": "^13.3.3",
    "stream": "0.0.2",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "uuid": "9.0.0",
    "webpack-cli": "5.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  }
}
